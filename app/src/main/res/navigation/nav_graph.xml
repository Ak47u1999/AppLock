<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="mufanc.tools.applock.ui.fragment.DashboardFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_scope"
        android:name="mufanc.tools.applock.ui.fragment.ScopeFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_scope" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="mufanc.tools.applock.ui.fragment.SettingsFragment"
        android:label="@string/title_notifications" />
</navigation>